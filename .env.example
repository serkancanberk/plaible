# Example environment file for Plaible

# Node.js
NODE_ENV=development
PORT=5050

# MongoDB
MONGODB_URI=mongodb://127.0.0.1:27017/plaible

# JWT
JWT_SECRET=your-jwt-secret

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5050/api/auth/google/callback

# OpenAI (Storyrunner)
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_INPUT_TOKENS=8000
OPENAI_MAX_OUTPUT_TOKENS=1000

# Payments
STRIPE_SECRET_KEY=your-stripe-secret
IYZICO_API_KEY=your-iyzico-api-key
IYZICO_SECRET=your-iyzico-secret

# Default language
DEFAULT_LANGUAGE=en
